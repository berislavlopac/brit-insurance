{% extends "base.html.jinja" %}

{% block content %}
  <h2>Sign In</h2>
  <p>Sign in to use the Shopping Lists app, or <a href="{{ url_for("sign-up") }}">sign up</a> if you don't have an account.</p>
  {% if error_message %}
    <article class="error">Error! {{ error_message }}</article>
  {% endif %}
  <form method="post">
    <input
        type="email"
        name="email"
        placeholder="Email address"
        aria-label="Email address"
        required
    />
    <input
        type="password"
        name="password"
        placeholder="Password"
        aria-label="Password"
        required
    />
    <button type="submit">Sign in</button>
  </form>
{% endblock %}
